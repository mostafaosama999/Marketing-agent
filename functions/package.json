{
  "name": "functions",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test:scraper": "npm run build && node lib/test/runScraperLocal.js",
    "test:ultralytics": "npm run build && node lib/test/testUltralyticsScraper.js",
    "test:ultralytics:single": "npm run build && node lib/test/testUltralyticsSingleUrl.js",
    "add:ultralytics:blogs": "npm run build && node lib/test/addUltralyticsBlogsToSheet.js",
    "debug:scraper": "npm run build && node lib/test/debugScraper.js",
    "test:thumbnails": "npm run build && node lib/test/testThumbnails.js",
    "test:webflow": "npm run build && node lib/test/testWebflowSync.js",
    "test:category": "npm run build && node lib/test/testCategoryDetection.js",
    "update:categories": "npm run build && node lib/test/updateCsvCategories.js",
    "list:sites": "npm run build && node lib/test/listWebflowSites.js",
    "list:collections": "npm run build && node lib/test/listWebflowCollections.js",
    "get:category": "npm run build && node lib/test/getCategoryId.js",
    "test:sheets": "npm run build && node lib/scripts/testSheetsSync.js",
    "test:single-url": "npm run build && node lib/scripts/testSingleUrl.js"
  },
  "engines": {
    "node": "20"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.69.0",
    "@google-analytics/data": "^5.2.1",
    "@google-cloud/storage": "^7.17.3",
    "@slack/web-api": "^7.10.0",
    "@types/papaparse": "^5.5.0",
    "axios": "^1.6.8",
    "cheerio": "^1.0.0-rc.12",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "firebase-admin": "^12.1.0",
    "firebase-functions": "^5.0.0",
    "googleapis": "^134.0.0",
    "openai": "^4.38.2",
    "papaparse": "^5.5.3",
    "puppeteer": "^24.29.1",
    "rss-parser": "^3.13.0"
  },
  "devDependencies": {
    "typescript": "^4.9.0"
  },
