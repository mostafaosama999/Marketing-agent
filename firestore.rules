rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Research sessions - for now allow all operations for development
    match /research_sessions/{sessionId} {
      allow read, write: if true;
    }

    // Allow reading/writing user data (future use)
    match /users/{userId} {
      allow read, write: if true;
    }

    // CRM leads - allow all operations for development
    match /leads/{leadId} {
      allow read, write: if true;
    }

    // CRM pipeline configuration - allow all operations for development
    match /pipeline_config/{configId} {
      allow read, write: if true;
    }

    // Default deny for security
    match /{document=**} {
      allow read, write: if false;
    }
  }
}