# Production Build Optimizations
# These settings reduce memory usage during build

# Disable source map generation (saves 50-70% memory)
GENERATE_SOURCEMAP=false

# Allow build to continue even with TypeScript errors
TSC_COMPILE_ON_ERROR=true

# Disable ESLint during build to save memory
DISABLE_ESLINT_PLUGIN=true

# Skip TypeScript checking during build (major memory savings)
SKIP_PREFLIGHT_CHECK=true

# Prevent inlining large images to reduce memory during build
IMAGE_INLINE_SIZE_LIMIT=0

# Don't inline runtime chunk to reduce memory usage
INLINE_RUNTIME_CHUNK=false

# Firebase Configuration
# These values are provided by DigitalOcean App Platform environment variables
# No need to set them here - they will be injected at build time
